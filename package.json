{
  "name": "node-ts-server",
  "version": "1.0.0",
  "description": "nodets测试项目",
  "main": "src/index.ts",
  "scripts": {
    "build-ts": "tsc",
    "watch-serve": "nodemon src/index.ts",
    "serve": "node dist/index.js",
    "build": "yarn run build-ts",
    "start": "yarn run serve"
  },
  "nodemonConfig": {
    "delay": 1000,
    "ignore": [
      "dist/*"
    ]
  },
  "author": "mgaia",
  "license": "ISC",
  "dependencies": {
    "koa": "^2.13.4",
    "koa-router": "^10.1.1"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
